# Logging
LOG_DIR=logs

# Elasticsearch
ES_HOST=http://localhost:9200
ES_INDEX=poi_v1
ES_MEM_OPTS="-Xms512m -Xmx512m"

# Kibana
KIBANA_PORT=5601

# LLM Service
LLM_PORT=8001
LLM_MODEL_PATH=data/models/Qwen3-0.6B-MLX-bf16
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.7

# Search Application
APP_PORT=8000
LLM_API_URL=http://localhost:8001/generate
DEFAULT_RADIUS_KM=5.0

# Data
OSM_DATA_PATH=data/shanghai-latest.osm.pbf
TRACE_LOG_FILENAME=pipeline_trace.log

# Ranking
RANK_DIST_SIGMA=2.0
RANK_POP_MAX=100
RANK_TOP_K=10
WEIGHT_REL=0.5
WEIGHT_DIST=0.3
WEIGHT_POP=0.2

# Recall Boosts
BOOST_PHRASE=5.0
BOOST_KEYWORD=2.0
BOOST_INFO=1.5
BOOST_NAME=1.5
BOOST_ADDR=1.2
BOOST_REWRITE=1.2
BOOST_CATEGORY=2.0

# Search & Dedup
SEARCH_SIZE=10
DEDUP_PRECISION=3

# Ingestion
INGEST_BATCH_SIZE=10
INGEST_LIMIT=5000

# Orchestration & Infrastructure
SERVICE_HOST=127.0.0.1
WAIT_LLM_SECONDS=15
DOCKER_LOG_FILENAME=docker_compose.log
LLM_LOG_FILENAME=llm_server.log
APP_LOG_FILENAME=search_app.log
DOCKER_PID_FILENAME=docker_logs.pid
